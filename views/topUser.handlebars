<h1>美食達人</h1>
<hr />
<div class="row" style="text-align: center;">
  {{#each users}}
    <div class="col-3">
      <a href="/users/{{this.id}}">
        <img class="rounded mb-1" src="{{this.image}}" onerror="this.src='https://i.imgur.com/5JjxZZi.png'" width="140px" height="140px">
        <h3 class="text-dark text-decoration-none">{{this.name}}</h3>
      </a>
      <span class="badge badge-secondary">追蹤人數：{{this.FollowerCount}}</span>
      <p>
        {{#if this.isFollowed }}
          <form action="/following/{{this.id}}?_method=DELETE" method="POST" style="display: contents;" {{#ifCond ../isOwnerId this.id}}hidden{{/ifCond}}>
            <button type="submit" class="btn btn-primary">取消追蹤</button>
          </form>
        {{else}}
          <form action="/following/{{this.id}}" method="POST" style="display: contents;" {{#ifCond ../isOwnerId this.id}}hidden{{/ifCond}}>
            <button type="submit" class="btn btn-outline-primary">追蹤</button>
          </form>
        {{/if}}
      </p>
    </div>
  {{/each}}
</div>